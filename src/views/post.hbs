{{> navbar}}

<div class="post-container">
    <h1>{{title}}</h1>
    <br>
    <p>{{body}}</p>
    <br><br>

    {{created_at}}
</div>

<div class="like-container">

    <h3>Likes: {{likes}}</h3>
    <button id="likePost" value="{{postId}}">Press to like</button>
    <span id="likeError" style="color: red; font-weight: bold;"></span>
</div>

<div class="comments">
    <h3>Comments</h3>
    <ul>

        {{#each comments}}
        <li>{{content}}</li>
        {{/each}}
    </ul>
    <form action="/comment" method="POST" style="margin-top: 10px;">
        <input type="hidden" name="post_id" value="{{postId}}">
        <label for="content">Add comment</label>
        <input type="text" name="content" id="content">
    </form>
</div>